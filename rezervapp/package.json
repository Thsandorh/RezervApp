{
  "name": "rezervapp",
  "version": "2.0.0",
  "description": "Professional restaurant reservation and management system with integrated payment processing (Stripe, Google Pay, SimplePay)",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "prisma db push --accept-data-loss --skip-generate && prisma generate && npm run db:seed:safe && next build",
    "build:local": "npm run db:setup && next build",
    "start": "next start",
    "lint": "eslint",
    "postinstall": "prisma generate",
    "db:setup": "prisma db push --accept-data-loss && npm run db:seed:safe",
    "db:seed": "tsx prisma/seed.ts",
    "db:seed:safe": "tsx prisma/seed.ts || echo '⚠️  Seed skipped or failed'",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "dependencies": {
    "@auth/prisma-adapter": "^2.11.1",
    "@fullcalendar/core": "^6.1.19",
    "@fullcalendar/daygrid": "^6.1.19",
    "@fullcalendar/interaction": "^6.1.19",
    "@fullcalendar/react": "^6.1.19",
    "@fullcalendar/timegrid": "^6.1.19",
    "@hookform/resolvers": "^5.2.2",
    "@prisma/client": "^6.19.0",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-toast": "^1.2.15",
    "@react-email/components": "^0.5.7",
    "bcryptjs": "^3.0.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "lucide-react": "^0.552.0",
    "next": "16.0.1",
    "next-auth": "^5.0.0-beta.30",
    "prisma": "^6.19.0",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "react-email": "^4.3.2",
    "react-hook-form": "^7.66.0",
    "resend": "^6.4.1",
    "sonner": "^2.0.7",
    "stripe": "^19.3.0",
    "tailwind-merge": "^3.3.1",
    "twilio": "^5.3.5",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@types/bcryptjs": "^2.4.6",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "16.0.1",
    "tailwindcss": "^4",
    "tsx": "^4.20.6",
    "typescript": "^5"
  }
}
