# RezervApp Environment Variables
# Copy this file to .env and fill in your values

# ============================================
# DATABASE
# ============================================
# Development (SQLite)
DATABASE_URL="file:./dev.db"

# Production (PostgreSQL - Vercel provides this automatically)
# DATABASE_URL="${POSTGRES_PRISMA_URL}"

# ============================================
# AUTHENTICATION (NextAuth.js v5)
# ============================================
# Your application URL
NEXTAUTH_URL="http://localhost:3000"

# Secret for JWT token signing (generate with: openssl rand -base64 32)
NEXTAUTH_SECRET="your-secret-key-generate-with-openssl"

# Trust host in production (required for Vercel)
AUTH_TRUST_HOST="true"

# ============================================
# ENCRYPTION
# ============================================
# Key for encrypting sensitive data (payment credentials, etc.)
# Generate with: openssl rand -hex 32
ENCRYPTION_KEY="your-encryption-key-32-chars-minimum"

# ============================================
# EMAIL NOTIFICATIONS (Optional)
# ============================================
# Resend API key for sending emails
# Get from: https://resend.com/api-keys
RESEND_API_KEY="re_xxxxxxxxxxxxxxxxxxxxxxxxxxxx"

# Email sender address (must be verified in Resend)
EMAIL_FROM="noreply@yourdomain.com"

# ============================================
# PAYMENT: STRIPE (Optional)
# ============================================
# Stripe Secret Key
# Get from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY="sk_test_xxxxxxxxxxxxxxxxxxxxxxxxxxxx"

# Stripe Webhook Secret
# Get from: https://dashboard.stripe.com/webhooks
STRIPE_WEBHOOK_SECRET="whsec_xxxxxxxxxxxxxxxxxxxxxxxxxxxx"

# ============================================
# PAYMENT: SIMPLEPAY (Optional - Hungarian OTP)
# ============================================
# SimplePay Merchant ID
SIMPLEPAY_MERCHANT_ID="MERCHANT-12345678"

# SimplePay Secret Key
SIMPLEPAY_SECRET_KEY="your-simplepay-secret-key"

# SimplePay Sandbox Mode (true for testing, false for production)
SIMPLEPAY_SANDBOX="true"

# ============================================
# SMS NOTIFICATIONS (Optional - Future)
# ============================================
# Twilio Account SID
# TWILIO_ACCOUNT_SID="ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"

# Twilio Auth Token
# TWILIO_AUTH_TOKEN="your-twilio-auth-token"

# Twilio Phone Number
# TWILIO_PHONE_NUMBER="+1234567890"

# ============================================
# OPTIONAL FEATURES
# ============================================
# Enable debug logging in development
# NODE_ENV="development"

# Custom timezone (default: Europe/Budapest)
# TZ="Europe/Budapest"

# ============================================
# NOTES
# ============================================
# - Never commit .env to version control
# - Payment credentials can also be configured via Admin UI
# - Admin UI storage is encrypted with ENCRYPTION_KEY
# - Environment variables take priority over database config
